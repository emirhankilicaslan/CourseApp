@model CourseViewModel

<h2>Kurs Güncelle</h2>
<hr>
<div class="row">
    <div class="col-8">
        <form asp-controller="Course" asp-action="Edit" method="post">
            <input type="hidden" asp-for="CourseId">
            <div class="mb-3">
                <label asp-for="CourseName" class="form-label">Kurs Adı</label>
                <input asp-for="CourseName" class="form-control">
            </div>
            <div class="mb-3">
                <label asp-for="InstructorId" class="form-label">Öğretmen Adı</label>
                <select asp-for="InstructorId" asp-items="ViewBag.Instructors" class="form-select">
                    <option value="">Seçiniz</option>
                </select>
            </div>
            <button class="btn btn-primary" type="submit">Kaydet</button>
        </form>
    </div>
    <div class="col-4">
        <h4>Kayıtlı olan öğrenciler</h4>
        <hr>
        <ul>
            @foreach(var item in @Model.CourseRegistrations)
            {
                <li>@item.Student.NameSurname</li>
            }
        </ul>
    </div>
</div>
