@model System.Collections.Generic.IEnumerable<Course>

    <h2>Kurs Listesi</h2>
    <a href="/Course/Create" class="btn btn-primary">Kurs Ekle</a>
    <hr>
    
    <table class="table table-bordered">
        <thead>
            <tr>
                <th style="width: 150px;">@Html.DisplayNameFor(m => m.CourseId)</th>
                <th>@Html.DisplayNameFor(m => m.CourseName)</th>
                <th style="width: 150px;"></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var course in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => course.CourseId)</td>
                    <td>@Html.DisplayFor(modelItem => course.CourseName)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@course.CourseId" class="btn btn-sm btn-primary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@course.CourseId" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>