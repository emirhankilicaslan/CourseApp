@model Student

<h2>Öğrenci Güncelle</h2>
<hr>
<div class="row">
    <div class="col-8">
        <form asp-controller="Student" asp-action="Edit" method="post">
            <input type="hidden" asp-for="StudentId">
            <div class="mb-3">
                <label asp-for="StudentName" class="form-label">Öğrenci Adı</label>
                <input asp-for="StudentName" class="form-control">
            </div>
            <div class="mb-3">
                <label asp-for="StudentSurname" class="form-label">Öğrenci Soyadı</label>
                <input asp-for="StudentSurname" class="form-control">
            </div>
            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control">
            </div>
            <div class="mb-3">
                <label asp-for="Telephone" class="form-label">Telefon</label>
                <input asp-for="Telephone" class="form-control">
            </div>
            <button class="btn btn-primary" type="submit">Kaydet</button>
        </form>
    </div>
    <div class="col-4">
        <h4>Kayıtlı olduğu kurslar</h4>
        <hr>
        <ul>
            @foreach(var item in @Model.CourseRegistrations)
            {
                <li>@item.Course.CourseName</li>
            }
        </ul>
    </div>
</div>
