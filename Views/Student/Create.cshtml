@model Student

<h2>Öğrenci Ekle</h2>
<hr>
<form asp-controller="Student" asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="StudentName" class="form-label">Öğrenci Adı</label>
        <input asp-for="StudentName" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="StudentSurname" class="form-label">Öğrenci Soyadı</label>
        <input asp-for="StudentSurname" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="Email" class="form-label">Email</label>
        <input asp-for="Email" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="Telephone" class="form-label">Telefon</label>
        <input asp-for="Telephone" class="form-control">
    </div>
    <button class="btn btn-primary" type="submit">Kaydet</button>
</form>