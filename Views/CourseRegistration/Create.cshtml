@model CourseRegistration

<h2>Kurs Kaydı Ekle</h2>
<hr>
<form asp-controller="CourseRegistration" asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="StudentId" class="form-label">Öğrenci</label>
        <select asp-for="StudentId" asp-items="ViewBag.Students" class="form-control"></select>
    </div>
    <div class="mb-3">
        <label asp-for="CourseId" class="form-label">Kurs</label>
        <select asp-for="CourseId" asp-items="ViewBag.Courses" class="form-control"></select>
    </div>
    <button class="btn btn-primary" type="submit">Kaydet</button>
</form>